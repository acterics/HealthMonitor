<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="GenericProgressIndicator" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="GenericProgressBackground" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="DefaultDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="DefaultPlot" parent="APDefacto.Light">
        <item name="android:background">@android:color/background_light</item>
        <item name="backgroundColor">@android:color/background_light</item>
        <item name="graphBackgroundColor">@android:color/background_light</item>
        <item name="gridBackgroundColor">@color/ap_white</item>
        <item name="domainLineColor">@color/colorPrimary</item>
        <item name="rangeLineColor">@color/colorPrimary</item>
        <item name="lineLabelTextColorTop">@color/colorPrimaryDark</item>
        <item name="lineLabelTextColorBottom">@color/colorPrimaryDark</item>
        <item name="lineLabelTextColorLeft">@color/colorPrimaryDark</item>
        <item name="lineLabelTextColorRight">@color/colorPrimaryDark</item>
        <item name="domainOriginLineColor">@color/colorPrimaryDark</item>
        <item name="rangeOriginLineColor">@color/transparent</item>
        <item name="titleTextColor">@color/colorPrimaryDark</item>
        <item name="domainTitleTextColor">@color/colorPrimaryDark</item>
        <item name="rangeTitleTextColor">@color/colorPrimaryDark</item>
        <item name="legendTextColor">@color/colorPrimaryDark</item>
    </style>




</resources>
